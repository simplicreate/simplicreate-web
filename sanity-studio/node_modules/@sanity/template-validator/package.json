{
  "name": "@sanity/template-validator",
  "version": "3.0.0",
  "description": "Sanity template validator for remote templates",
  "keywords": [],
  "homepage": "https://github.com/sanity-io/template-validator#readme",
  "bugs": {
    "url": "https://github.com/sanity-io/template-validator/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sanity-io/template-validator.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sanity-template-validate": "./dist/cli.cjs",
    "template-validator": "./dist/cli.cjs"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "pkg build --strict --clean --check",
    "build:action": "ncc build src/action.ts -o dist/action --source-map --license licenses.txt -t",
    "format": "prettier --write --cache --ignore-unknown .",
    "lint": "eslint . --ext .cjs,.js,.ts,.tsx",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "ts:check": "tsc --noEmit"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "browserslist": "extends @sanity/browserslist-config",
  "prettier": "@sanity/prettier-config",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@sanity/pkg-utils": "^7.1.1",
    "@sanity/prettier-config": "^1.0.3",
    "@sanity/semantic-release-preset": "^5.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "semantic-release": "^24.2.9",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
